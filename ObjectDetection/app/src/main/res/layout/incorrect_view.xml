    <ImageView
        android:id="@+id/incorrect_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/incorrect_sign"
        app:layout_constraintTop_toBottomOf="@id/front_image"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="틀렸습니다!"
        android:textSize="30sp"
        android:textColor="#E60C25"
        app:layout_constraintTop_toBottomOf="@+id/incorrect_sign"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <Button
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="다시하기"
        android:textAllCaps="false"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incorrect_sign" />


    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="메뉴로 돌아가기"
        android:textAllCaps="false"
        android:background="#ffffff"
        app:layout_constraintLeft_toRightOf="@+id/retryButton"
        app:layout_constraintTop_toBottomOf="@id/incorrect_sign"
        android:layout_marginLeft="200dp"/>

