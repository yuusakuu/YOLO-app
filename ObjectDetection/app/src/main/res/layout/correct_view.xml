    <ImageView
        android:id="@+id/correct_sign"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/correct_sign"
        app:layout_constraintTop_toBottomOf="@+id/front_image"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <ImageView
        android:id="@+id/item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ice"
        app:layout_constraintTop_toBottomOf="@id/front_image"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맞았습니다!"
        android:textSize="30sp"
        android:textColor="#0C6EE6"
        app:layout_constraintTop_toBottomOf="@+id/correct_sign"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <TextView
        android:id="@+id/item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+3 개 \n 얼음과자 획득!"
        android:textSize="30sp"
        android:textColor="#0C6EE6"
        app:layout_constraintTop_toBottomOf="@+id/correct_sign"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        android:textAlignment="center"
        />



    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="다음 문제 풀기"
        android:textAllCaps="false"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_sign"
        />


    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="메뉴로 돌아가기"
        android:textAllCaps="false"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/correct_sign"
        app:layout_constraintLeft_toLeftOf="@+id/nextButton"
        android:layout_marginLeft="200dp"
        />

